<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.5;netstandard1.6</TargetFrameworks>
    <Description>Simple API for Azure Storage</Description>
    <Version>0.2.5</Version>
    <PackageReleaseNotes>Added ConfigureAwait(false).GetAwaiter() to blocking calls. NET Standard Library version of Azure Storage only supports Async calls. To maintain our API surface which support synchronous as well as async, async versions of the calls are awaited.</PackageReleaseNotes>
    <Authors>TECH-IS, Arinze</Authors>
    <Company>TECH-IS INC.</Company>
    <Copyright>TECH-IS INC. 2017</Copyright>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/TechInceptions/TECHIS.Cloud.AzureStorage</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TechInceptions/TECHIS.Cloud.AzureStorage</RepositoryUrl>
    <PackageTags>Azure Storage File API Simple Techis</PackageTags>
    <Product>SAFAS: Simple API for Azure Storage</Product>
    <RepositoryType>Git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
    <PackageReference Include="System.Net.Requests" Version="4.3.0" />
    <PackageReference Include="TECHIS.Core" Version="4.0.5" />
    <PackageReference Include="WindowsAzure.Storage" Version="8.1.1" />
  </ItemGroup>

</Project>